# OpenTrade 环境变量配置
# 复制此文件为 .env 并填写你的配置

# ============== 基础配置 ==============
OPENTRADE_MODE=paper              # 运行模式: paper(模拟) / live(实盘)
OPENTRADE_DEBUG=false             # 调试模式
OPENTRADE_LOG_LEVEL=INFO          # 日志级别: DEBUG / INFO / WARNING / ERROR

# ============== 数据库配置 ==============
# PostgreSQL (Docker 默认配置)
OPENTRADE_DB_URL=postgresql+asyncpg://opentrade:password@localhost:5432/opentrade

# Redis
OPENTRADE_REDIS_URL=redis://localhost:6379/0

# ============== 交易所配置 ==============
# 选择交易所: binance, bybit, hyperliquid, okx, kuccoin, etc.
OPENTRADE_EXCHANGE=binance

# 交易所 API Key (从交易所官网获取)
OPENTRADE_EXCHANGE_API_KEY=your_api_key_here
OPENTRADE_EXCHANGE_API_SECRET=your_api_secret_here

# 交易所 API 密码 (部分交易所需要)
OPENTRADE_EXCHANGE_API_PASSWORD=

# 代理地址 (可选)
OPENTRADE_EXCHANGE_PROXY=

# ============== AI 模型配置 ==============
# DeepSeek (推荐 - 便宜且效果好)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# OpenAI (可选)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic (可选)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 默认使用的模型
OPENTRADE_DEFAULT_MODEL=deepseek

# ============== Telegram 通知 ==============
# Telegram Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram 聊天 ID (你的用户 ID 或群组 ID)
TELEGRAM_CHAT_ID=your_chat_id_here

# ============== 数据源配置 ==============
# Glassnode (链上数据)
GLASSNODE_API_KEY=your_glassnode_api_key_here

# CryptoQuant (链上数据)
CRYPTOQUANT_API_KEY=your_cryptoquant_api_key_here

# FRED (宏观经济数据)
FRED_API_KEY=your_fred_api_key_here

# ============== 风控配置 ==============
OPENTRADE_MAX_LEVERAGE=2.0        # 最大杠杆
OPENTRADE_MAX_POSITION=0.1        # 单笔最大仓位 (10%)
OPENTRADE_MAX_DAILY_LOSS=0.05     # 单日最大亏损 (5%)
OPENTRADE_STOP_LOSS=0.03          # 默认止损 (3%)
OPENTRADE_TAKE_PROFIT=0.06        # 默认止盈 (6%)

# ============== Web 服务配置 ==============
OPENTRADE_WEB_HOST=0.0.0.0        # 绑定地址
OPENTRADE_WEB_PORT=8000           # HTTP 端口

# ============== 网关配置 ==============
OPENTRADE_GATEWAY_HOST=0.0.0.0
OPENTRADE_GATEWAY_PORT=18790

# ============== 安全配置 ==============
# API 密钥加密密钥 (随机生成，勿修改)
OPENTRADE_ENCRYPTION_KEY=change_this_to_a_random_32_character_string

# JWT 密钥
OPENTRADE_JWT_SECRET=change_this_to_a_secure_random_string

# ============== 监控配置 ==============
OPENTRADE_PROMETHEUS_ENABLED=true
OPENTRADE_PROMETHEUS_PORT=9090
